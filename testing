local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Exile's Hoopz UI", "Serpent")
    -- MAIN
    local Main = Window:NewTab("Main")
    local MainSection = Main:NewSection("Utilities (Press 3 Dots First)")


    MainSection:NewButton("Aimlock", "Use Centered Shiftlock to make it look accurate.", function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/Rebelisamazing/msahub/main/private'))()
    end)

    --> LOCAL PLAYER <--
    local Player = Window:NewTab("Player")
    local PlayerSection = Player:NewSection("Player")

    Speed = 40
    local User = game:GetService "Players".LocalPlayer
    local Character = User.Character
    
    local Humanoid = Character:WaitForChild "Humanoid"
    Humanoid.WalkSpeed = Speed
    
    PlayerSection:NewSlider(
        "Walkspeed",
        "SPEED!!",
        19,
        16,
        function(s)
          Speed = s;
          Humanoid.WalkSpeed = s
        end
    )
    User.CharacterAdded:Connect(
        function(Character)
            local Humanoid = Character:WaitForChild "Humanoid"
            Humanoid.WalkSpeed = Speed
        end
    )

    PlayerSection:NewButton("Reset WS", "Resets to defaults", function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
    end)
